{
  "pluginAlias": "homebridge-http-windspeed",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "The url must return the data un the json format: { \"windspeed\": 50 }",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "placeholder": "HTTP windspeed"
      },
      "host": {
        "title": "host",
        "type": "string",
        "placeholder": "192.168.0.123:8080"
      },
      "path": {
        "title": "path",
        "type": "string",
        "placeholder": "/"
      },
      "suffix": {
        "title": "suffix",
        "type": "string",
        "placeholder": "getwindspeed"
      },
      "manufacturer": {
        "title": "manufacturer",
        "type": "string",
        "placeholder": "diy"
      },
      "model": {
        "title": "model",
        "type": "string",
        "placeholder": "v1.0"
      },
      "serial": {
        "title": "serial",
        "type": "string",
        "placeholder": "202205"
      },
      "min_windspeed": {
        "title": "min windspeed",
        "type": "int",
        "placeholder": 0
      },
      "max_windspeed": {
        "title": "max windspeed",
        "type": "int",
        "placeholder": 10000
      },
      "timeout": {
        "title": "timeout",
        "type": "int",
        "placeholder": 60
      }
    },
    "oneOf": [
      {
        "required": [
          "name",
          "host",
          "path"
        ]
      }
    ]
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
          "name",
          "host",
          "path"
      ]
    }
  ]
}
