{
  "pluginAlias": "homebridge-http-weatherstation",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "The url must return the data un the json format: { \n\"windspeed\": 50\n\"temperature\": 26.0\n\"humidity\": 30.0\n }",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "placeholder": "HTTP weatherstation"
      },
      "host": {
        "title": "host",
        "type": "string",
        "placeholder": "192.168.0.123:8080"
      },
      "path": {
        "title": "path",
        "type": "string",
        "placeholder": "/"
      },
      "suffix": {
        "title": "suffix",
        "type": "string",
        "placeholder": "getwweatherdata"
      },
      "manufacturer": {
        "title": "manufacturer",
        "type": "string",
        "placeholder": "diy"
      },
      "model": {
        "title": "model",
        "type": "string",
        "placeholder": "v1.0"
      },
      "serial": {
        "title": "serial",
        "type": "string",
        "placeholder": "202205"
      },
      "min_windspeed": {
        "title": "min windspeed",
        "type": "int",
        "placeholder": 0
      },
      "max_windspeed": {
        "title": "max windspeed",
        "type": "int",
        "placeholder": 10000
      },
      "timeout": {
        "title": "timeout",
        "type": "int",
        "placeholder": 60
      }
    },
  "form": [
    "name",
    "apikey",
    {
      "type": "help",
      "helpvalue": "City Names <strong class='text-danger'>*</strong>"
    },
    {
      "nodescription": true,
      "notitle": true,
      "key": "locations",
      "type": "array",
      "items": [
        {
          "type": "div",
          "displayFlex": true,
          "flex-direction": "row",
          "items": [
            {
              "key": "locations[]",
              "required": true,
              "flex": "1 1 50px"
            }
          ]
        }
      ]
    },
    {
      "nodescription": true,
      "notitle": true,
      "key": "cityIds",
      "type": "array",
      "items": [
        {
          "type": "div",
          "displayFlex": true,
          "flex-direction": "row",
          "items": [
            {
              "key": "cityIds[]",
              "required": true,
              "flex": "1 1 50px"
            }
          ]
        }
      ]
    },
    "dailyForecasts",
    "hourlyForecasts",
    "noLeak",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Advanced Settings",
      "description": "Don't change these, unless you understand what you're doing.",
      "items": [
        "timeout"
      ]
    }
  ]

}
