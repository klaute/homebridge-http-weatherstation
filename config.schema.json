{
  "pluginAlias": "homebridge-http-windspeed",
  "pluginType": "platform",
  "headerDisplay": "You must supply _either_ **URL & Http Method** the url must return the data un the json format: {
	\"windspeed\": 50.0
}",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "placeholder": "HTTP windspeed"
      },
      "host": {
        "title": "host",
        "type": "string",
        "placeholder": "192.168.0.123:8080"
      },
      "path": {
        "title": "path",
        "type": "string",
        "placeholder": "/windspeed"
      },
      "manufacturer": {
        "title": "manufacturer",
        "type": "string",
        "placeholder": "diy"
      },
      "model": {
        "title": "model",
        "type": "string",
        "placeholder": "v1.0"
      },
      "serial": {
        "title": "serial",
        "type": "string",
        "placeholder": "202205"
      },
      "timeout": {
        "title": "timeout",
        "type": "int",
        "placeholder": 60
      }
    },
    "oneOf": [
      {
        "required": [
          "host",
          "path",
          "url",
          "http_method"
        ]
      }
    ]
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
          "name",
          "url",
          "http_method"
      ]
    }
  ]
}
